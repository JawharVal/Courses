<resources>
    <style name="Theme.Courses" parent="Theme.Material3.Dark.NoActionBar">

        <item name="colorPrimary">@color/green_primary</item>


        <item name="android:windowBackground">@color/bg_main</item>


        <item name="android:statusBarColor">@color/bg_main</item>
        <item name="android:windowLightStatusBar">false</item>


        <item name="materialButtonStyle">@style/NoTintButton</item>
    </style>

    <style name="NoTintButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/input_bg</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SortButtonStyle">
        <item name="android:background">@color/bg_secondary</item>
        <item name="android:textColor">@color/green_primary</item>
    </style>
</resources>
